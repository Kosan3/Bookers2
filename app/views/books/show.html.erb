<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/list', user: @user %>
			<h2>New book</h2>
			<%= form_for(@booknew) do |f| %>
				<p>Title</p>
				<%= f.text_field :title, class: "form-control" %>
				<p>Opinion</p>
				<%= f.text_area :body, class: "form-control" %>
				<br>
				<%= f.submit "Create Book", class: "btn btn-primary", style: "width: 100%;" %>
			<% end %>
		</div>
		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(@book.user) do %>
								<%= attachment_image_tag @book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %><br><%= @book.user.name %>
							<% end %>
						</td>
						<td><%= @book.title %></td>
						<td><%= @book.body %></td>
						<% if @book.user == current_user %>
							<td>
								<%= link_to edit_book_path do %>
									<button class="btn btn-success btn-xs">Edit</button>
								<% end %>
							</td>
							<td>
								<%= link_to book_path(@book), method: :delete, "data-confirm" => "本当に消しますか?" do %>
									<button class="btn btn-danger btn-xs">Destroy</button>
								<% end %>
							</td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>