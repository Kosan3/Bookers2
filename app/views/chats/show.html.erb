<h1 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>"><%= @user.name %>  さんとのチャット</h1>

<div class="message">
	<% @chats.each do |chat| %>
		<% if chat.user_id == current_user.id %>
			<p style="text-align: right;"><%= chat.message %></p>
		<% else %>
			<p style="text-align: left;"><%= chat.message %></p>
		<% end %>
	<% end %>
</div>

<%= form_with model: @chat, url: chats_path, method: :post, local: true do |f| %>
	<%= f.text_field :message %>
	<%= f.hidden_field :room_id, :value => @room.id %>
	<div><%= f.submit "送信", class: "btn btn-success" %></div>
<% end %>
