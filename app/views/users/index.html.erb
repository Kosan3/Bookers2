<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/list', user: @user %>
			<%= render 'books/list', book: @book %>
		</div>
		<div class="col-xs-9">
			<h2>Users</h2>

			<table class="table table-hover">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="1"></th>
					</tr>
				</thead>
				<% @users.each do |user| %>
				<tbody>
					<tr>
						<td><%= attachment_image_tag user, :profile_image,size:"50x50",fallback: "no_image.jpg" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user_path(user) %></td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>

